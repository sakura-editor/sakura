set platform=%1
set configuration=%2
set ERROR_RESULT=0

pushd %~dp0

set BUILDDIR=build\%platform%
if exist "%BUILDDIR%" (
	rmdir /s /q %BUILDDIR%
)
mkdir %BUILDDIR%
cmake -DCMAKE_GENERATOR_PLATFORM=%platform% -B%BUILDDIR% -H. || set ERROR_RESULT=1

popd

if "%ERROR_RESULT%" == "1" (
	@echo ERROR
	exit /b 1
)
